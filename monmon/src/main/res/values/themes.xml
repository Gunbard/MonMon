<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MonMon" parent="Theme.AppCompat" />

    <style name="Theme.MonMon.Fullscreen" parent="Theme.MonMon">
        <item name="android:actionBarStyle">@style/Widget.Theme.MonMon.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.MonMon.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="TransparentDialog" parent="Theme.MaterialComponents.Dialog">
        <!-- Removes the dark dimming effect -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- Makes the dialog window frame transparent -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Removes the default border/shadow -->
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>